= turbo_stream_from post
%p{style: "color: green"}= notice

%section.section
  .container
    %nav.level
    .content
      %strong{style: "color: blue;"}= post.title
      = post.body.to_plain_text

    = link_to t("edit"), edit_teacher_course_post_path(course, post)
    |
    = link_to t(".back_to_posts"), teacher_course_posts_path(course)

    = button_to t("delete"),
      [:teacher, course, post],
      method: :delete,
      class: "btn btn-danger"

    %hr
    %section.section.comments
      .container
        %strong.subtitle.is-5{style: "color: green;"}= ("students_comments")
        #comments
          = render partial: "shared/comments/comment", collection: post.comments, locals: { role: :teacher }

        .comment-form
          %turbo-frame#create_comment
            = link_to t(".leave_comment"),new_teacher_course_post_comment_path(course,post)
