= turbo_stream_from post

- if notice
  .alert.alert-success= notice

%section.section
  .container
    %nav.level.mb-3
      / You can add breadcrumbs or navigation here

    .card.mb-4
      .card-body
        %h3.card-title.text-primary= post.title
        %p.card-text= post.body.to_plain_text

        .mt-3
          = link_to t("edit"), edit_teacher_course_post_path(course, post), class: "btn btn-outline-primary me-2"
          = link_to t(".back_to_posts"), teacher_course_posts_path(course), class: "btn btn-secondary me-2"
          = button_to t("delete"), [:teacher, course, post], method: :delete, class: "btn btn-danger"

    = render template: "shared/comments/index",
      locals: { comments: post.comments, role: :teacher, new_path: new_teacher_course_post_comment_path(course, post) }
