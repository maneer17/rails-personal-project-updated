%p{style: "color: green"}= notice
- content_for :title, t(".title")
%h1
  #{t(".assignments_for")} #{@course.name}
#assignments
  %table.table
    %thead
      %tr
        %th{scope: "col"}=t(".assignment")
        %th{scope: "col"}=t(".deadline")
    %tbody
      - @assignments.each do |assignment|
        %tr
          %td= link_to assignment.title, [:teacher, @course, assignment]
          - if assignment.deadline
            %td= assignment.deadline.strftime("%B %d, %Y %I:%M %p")
= button_to t(".new_assignment"),
new_teacher_course_assignment_path,
method: :get,
class: "btn btn-success"