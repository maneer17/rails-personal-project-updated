- if notice
  .alert.alert-success.text-center.mb-4
    = notice

.card.shadow-sm.mb-4
  .card-body
    %h2.card-title.text-primary.mb-3= course.name
    %p.card-text.text-muted= course.description

    .d-flex.gap-2.mt-3
      = link_to t("edit"),
        edit_teacher_course_path(course),
        class: "btn btn-warning px-4"

      = button_to t("delete"),
        [:teacher, course],
        method: :delete,
        class: "btn btn-danger px-4",
        data: { confirm: t("are_you_sure", default: "Are you sure you want to delete this course?") }

.card.mt-3
  .card-body
    %p.mb-0.fw-semibold
      = "#{course.students.count} #{t('.enrolled_in_this_course')}"
