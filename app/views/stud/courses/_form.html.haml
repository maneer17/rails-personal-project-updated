- content_for :title, "Courses"

= form_with url: enroll_stud_courses_path, method: :post do
  %ul
    - @courses.each do |course|
      %li
        = check_box_tag "course_ids[]", course.id, false, id: "course_#{course.id}"
        = label_tag "course_#{course.id}", "Course name: #{course.name}"
        %br/
        = label_tag nil, "Teacher of course: #{Teacher.find(course.teacher_id).name}"
        %br/

  - unless @courses.empty?
    = submit_tag "Enroll in these courses", class: "btn btn-primary mt-3"
