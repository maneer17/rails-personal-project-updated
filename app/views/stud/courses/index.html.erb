<p style="color: green"><%= notice %></p>
<% content_for :title, "Courses" %>
<h1 style="margin-left: 15px">Your Courses:</h1>
<br>
<div id="courses">
  <div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-3">
      <% @courses.each do |course| %>
        <div class="col">
          <div class="card" style="height: 100%; margin-left: 20px; border-bottom-color: black;">
            <%= render course %>
            <div class="row g-2" style="margin: 10px 0;">
              <!-- Buttons aligned horizontally -->
              <div class="col-auto">
                <%= button_to "Assignments", stud_course_assignments_path(course.id), class: "btn btn-primary", method: :get %>
              </div>
              <div class="col-auto">
                <%= button_to "Posts", stud_course_posts_path(course.id), class: "btn btn-primary", method: :get %>
              </div>
            </div>
            <!-- Unenroll button below -->
            <div class="row" style="margin: 10px 0;">
              <div class="col">
                <%= button_to "Unenroll from this course", unenroll_stud_courses_path(course_id: course.id), method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to withdraw from #{course.name}?" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
