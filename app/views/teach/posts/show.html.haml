%p{:style => "color: green"}= notice
%section.section
  .container
    %nav.level
    .content
      %strong{:style => "color:blue;"}= @post.title
      = @post.body
    = link_to "Edit this post", edit_teach_course_post_path(@course,@post)
    |
    \#{link_to "Back to posts", teach_course_posts_path}
    
    \#{button_to "Destroy this post", [:teach,@course,@post], method: :delete, class:"btn btn-danger"}
%hr/
%section.section.comments
  .container
    %strong.subtitle.is-5 students Comments for this post:
    = render @post.comments
