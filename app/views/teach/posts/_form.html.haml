= form_with model:[:teach, @course, @post] do |form|
  - if @post.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - post.errors.each do |error|
          %li= error.full_message
  .my-5
    = form.label :title
    = form.text_field :title, class: "block shadow rounded-md…"
  .my-5
    = form.label :body
    = form.rich_text_area :body, rows: 3, class: "block shadow…"
  .inline
    = form.submit class: "rounded-lg py-2 px-3 btn btn-primary"
