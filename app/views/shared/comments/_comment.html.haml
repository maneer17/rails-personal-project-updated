%div{id: dom_id(comment)}
  .box
    %article.media
      .media-content
        .content
          %p{style: "margin: 10px;"}= comment.body
          %span.badge.bg-light.text-muted.mt-2{ style: "font-size: 0.8rem;" }
            = comment.commenter&.name 

          - if current_student == comment.commenter || current_teacher == comment.commenter
            .row.mt-2
              .col-2
                = button_to [role, course, post, comment],
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-link p-0 text-danger d-flex align-items-center gap-1" do
                  Delete
                  = image_tag "https://cdn-icons-png.flaticon.com/128/1214/1214428.png",
                              style: "width: 16px; height: 16px;"

              .col-2
                %turbo-frame{id: "edit #{dom_id(comment)}"}          
                  = link_to edit_student_course_post_comment_path(course, post, comment),

                      class: "btn btn-link p-0 text-primary d-flex align-items-center gap-1" do
                    Edit
                    = image_tag "https://cdn-icons-png.flaticon.com/128/1827/1827933.png",
                                style: "width: 16px; height: 16px;"

          %hr
