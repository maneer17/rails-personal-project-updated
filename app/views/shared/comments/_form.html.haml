#comment_form
  = simple_form_for [role,course,post,comment] do |f|
    .field
      .control
        = f.input :body, input_html: { class: "textarea" }, wrapper: false, label: false
        = f.hidden_field :post_id, value: post.id 
        = f.hidden_field :commenter_id, value: role == :student ?current_student.id : current_teacher.id 
        = f.hidden_field :commenter_type, value: role==:student ? 'Student' : 'Teacher'
    = f.button :submit, class: "btn btn-primary"
